
<h2>Eat the Burger</h2>

<h4>Eaten Burgers</h4>
<ul>
    {{#each burger_data}}
        {{#unless this.devoured}}
            {{> burger-block devoured=true}}
        {{/unless}}
    {{/each}}
</ul>

<h2>You should eat these burgers</h2>

<ul>
    {{#each burger}}
        {{#if devoured}}
            {{> burger-block devoured=false}}
        {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="burger">Burger Name:</label>
        <input type="text" id="burger" name="name">
    </div>

    <div class="form-group">
        <label for="devoured">Devoured?</label><br>
        <input type="radio" name="devoured" value="1" checked> devoured!<br>
        <input type="radio" name="devoured" value="0"> not devoured
    </div>

    <button type="submit">Add burger</button>
</form>
